<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4eeee">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:id="@+id/btnLogOut"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:background="#d60e0e"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/userTxt"
        android:layout_toEndOf="@+id/userTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/userTxt"
        android:singleLine="true"
        android:layout_marginTop="78dp"
        android:textSize="40dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/btnLogOut"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get start"
        android:id="@+id/button"
        android:layout_marginBottom="65dp"
        android:background="#d60e0e"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:id="@+id/btnSettings"
        android:layout_above="@+id/userTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:background="#d60e0e"
        android:allowUndo="true"
        android:textColor="#ffffff"
        android:layout_toStartOf="@+id/userTxt"
        android:layout_toLeftOf="@+id/userTxt" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:layout_below="@+id/userTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Omar"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#e7e4e4"
        android:textColor="#000000"
        android:singleLine="true" />

</RelativeLayout>