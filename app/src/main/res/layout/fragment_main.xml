<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="#ffffff"
        android:layout_below="@id/toolbar_main"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Månad"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            style="?android:listSeparatorTextViewStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Lön"
            android:id="@+id/textView2"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"

            android:text="Timmar"
            android:layout_marginBottom="5dp"
            android:id="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textView2"
            android:text="5000"
            android:id="@+id/tvSalary"
            android:layout_below="@+id/textView2"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/tv_title_next_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nästa pass: fredag 23/7"
            android:layout_below="@+id/tvSalary"
            android:layout_marginBottom="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="?android:listSeparatorTextViewStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Lön"
            android:id="@+id/rrr"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/tv_title_next_pass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rrr"
            android:text="429 kr"
            android:id="@+id/tvSalaryPass"
            android:layout_below="@+id/rrr"/>

        <!--<TextView
            android:id="@+id/tvNextPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginLeft="@dimen/item_horizontal_margin"
            android:gravity="bottom"
            android:text="fredag 23/7"
            android:layout_below="@id/tv_title_next_pass"

            />        -->

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="37h"

            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@id/textView4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            android:text="Timmar"
            android:id="@+id/textView10"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/tvSalaryPass"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="3 h"
            android:id="@+id/tvHoursPass"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10" />
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/layout_title_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_info"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="2"
            android:text="Titel"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Datum"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tid"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layout_title_main_list">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>